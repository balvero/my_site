<div  class="container">
  <div class="post-entry">
    <h2 class="title center"><%= @post.title %></h2>
    <div class="meta center">Posted: <%= @post.created_at.strftime("%A, %b, %d") %> </div>
    <div class="post-spacer"></div>
    <div class="post-content">
      <%= @post.content %>
    </div>
    <div class="body-nav">
      <%= link_to  'Edit', edit_post_path(@post), class: 'button'  %>
      <%= link_to  'Delete', post_path(@post), class: 'button', method: :delete, data: {confirm: 'Are you sure you want to delete this post?'}  %>
      <%= link_to 'Back to Posts', posts_path, class: 'button button-primary' %>
    </div>
  </div>
</div>